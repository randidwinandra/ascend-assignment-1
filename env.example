# Flash Survey Tool - Environment Variables

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key
NODE_ENV=development

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=3600  # 1 hour in seconds
RATE_LIMIT_MAX_REQUESTS=100
VOTE_LIMIT_PER_SURVEY=100

# Survey Configuration
SURVEY_EXPIRATION_DAYS=3
MAX_QUESTIONS_PER_SURVEY=3
MAX_SURVEY_TITLE_LENGTH=100
MAX_QUESTION_TEXT_LENGTH=200

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600  # 1 hour in seconds
REDIS_TTL=604800  # 7 days in seconds

# Deployment Configuration
VERCEL_URL=your-vercel-url.vercel.app
GITHUB_TOKEN=your-github-token-for-actions

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn (optional)
POSTHOG_KEY=your-posthog-key (optional)
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/flashsurvey
DATABASE_POOL_MAX=20
DATABASE_POOL_MIN=5

# Email Configuration (for notifications - optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
CSRF_SECRET=your-csrf-secret
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=false
ENABLE_EXPORTS=false

# Development Configuration
DEBUG=true
MOCK_REDIS=false
MOCK_SUPABASE=false
SIMULATE_SLOW_NETWORK=false 