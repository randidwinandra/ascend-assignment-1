{
  "name": "flash-survey-tool",
  "version": "1.0.0",
  "private": true,
  "description": "Internal Flash Survey tool for StoryStream Studios",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:functions": "jest --testPathPattern=tests/functions",
    "test:e2e": "playwright test",
    "test:load": "k6 run tests/load/survey-load.js",
    "db:setup": "supabase db push",
    "db:seed": "supabase db seed",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > types/supabase.ts",
    "deploy": "vercel --prod",
    "deploy:staging": "vercel",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.0",
    "@upstash/redis": "^1.28.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "jose": "^5.1.3",
    "lucide-react": "^0.303.0",
    "nanoid": "^5.0.4",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "supabase": "^1.226.4",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "StoryStream Studios",
  "license": "MIT",
  "keywords": [
    "survey",
    "react",
    "supabase",
    "redis",
    "typescript",
    "next.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/storystreamstudios/flash-survey-tool"
  },
  "bugs": {
    "url": "https://github.com/storystreamstudios/flash-survey-tool/issues"
  },
  "homepage": "https://github.com/storystreamstudios/flash-survey-tool#readme"
}
